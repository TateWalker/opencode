{
  "$schema": "https://opencode.ai/config.json",
  "theme": "nord",
  "model": "github-copilot/claude-sonnet-4-5",
  "agent": {
    "build": {
      "disable": true
    }
  },
  "mcp": {
    "serena": {
      "type": "local",
      "command": ["uvx", "--from", "git+https://github.com/oraios/serena", "serena", "start-mcp-server", "--context", "ide-assistant", "--project-from-cwd"],
      "enabled": true
    },
    "figma": {
      "type": "local",
      "command": ["npx", "-y", "figma-developer-mcp", "--stdio"],
      "enabled": true,
      "environment": {
        "FIGMA_API_KEY": "***REMOVED***"
      }
    }
  }
}
